{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noEmitHelpers": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "baseUrl": ".",
        "paths": {
            "app": [ "src/app" ],
            "app/*": [ "src/app/*" ],
            "core": [ "src/core" ],
            "core/*": [ "src/core/*" ]
        },
        "types": [
          "node",
          "core-js"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "exclude": [
        "node_modules"
    ]
}
